<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd">

    <changeSet id="001-createAndInsertAuthors" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="authors"/>
            </not>
        </preConditions>

        <createTable tableName="authors">
            <column name="id" type="NUMERIC(19,0)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="fullname" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/authors.csv" tableName="authors" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="fullname" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="002-createAndInsertGenres" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="genres"/>
            </not>
        </preConditions>

        <createTable tableName="genres">
            <column name="id" type="NUMERIC(19,0)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/genres.csv" tableName="genres" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="title" type="STRING"/>
        </loadData>
    </changeSet>

    <changeSet id="003-createAndInsertBooks" author="kan" context="update" runInTransaction="false">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="books"/>
            </not>
        </preConditions>

        <createTable tableName="books">
            <column name="id" type="NUMERIC(19,0)" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="author_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
            <column name="genre_id" type="NUMERIC(19,0)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <loadData encoding="UTF-8" file="liquibase/data/books.csv" tableName="books" separator=";">
            <column name="id" type="NUMERIC"/>
            <column name="title" type="STRING"/>
            <column name="author_id" type="NUMERIC"/>
            <column name="genre_id" type="NUMERIC"/>
        </loadData>
    </changeSet>
</databaseChangeLog>